<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category.CategoryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="16dp"
            android:text="Category"
            android:textSize="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameCategory"
            app:layout_constraintVertical_bias="0.038">

            <EditText
                android:id="@+id/filterEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:hint="Enter keyword for filter"
                app:layout_constraintTop_toBottomOf="@+id/nameCategory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/suit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/suit" />

            <ImageView
                android:id="@+id/dress"
                android:layout_width="60dp"

                android:layout_height="60dp"
                android:src="@drawable/dress" />

            <ImageView
                android:id="@+id/childrenSuit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/childrensuit"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/coat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/coat" />

            <ImageView
                android:id="@+id/childrenshoes"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/babyshoes" />

            <ImageView
                android:id="@+id/smartphone"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/smartphone" />

            <ImageView
                android:id="@+id/watch"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/watch" />

            <ImageView
                android:id="@+id/sneakers"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sneakers"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/womanshoes"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/womanshoes" />

            <ImageView
                android:id="@+id/manshoes"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/manshoes" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
