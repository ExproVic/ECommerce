<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/areaSearch"
        android:layout_width="200dp"
        android:layout_height="40dp"
         />


    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/areaSearch"
        android:backgroundTint="@color/textHeading"
        android:text="Search" />
    <Button
        android:id="@+id/buttonSearchReset"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/buttonSearch"
        android:backgroundTint="@color/textHeading"
        android:text="Reset" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imgcart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/recycleview"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="68dp"
        android:clickable="true"
        android:onClick="onCartButtonClick"
        android:src="@drawable/shopping_cart" />

    <ImageView
        android:id="@+id/imgemail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/recycleview"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="142dp"
        android:layout_toStartOf="@+id/imgcart"
        android:clickable="true"
        android:onClick="onEmailButtonClick"
        android:src="@drawable/mail" />


</RelativeLayout>
